generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// add update and created at here 
model Course {
  id             Int             @id @default(autoincrement())
  title          String
  bannerImage    String
  description    String
  openToEveryone Boolean         @default(false)
  price          Int
  userPurchases  UserPurchase[]
  contents       CourseContent[] // Optional if content will be linked to Course
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model CourseContent {
  id             Int      @id @default(autoincrement())
  description    String?
  videoUrl       String
  thumbnailImage String
  createdAt      DateTime @default(now())
  Course         Course?  @relation(fields: [courseId], references: [id])
  courseId       Int?
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  phoneNumber   String?        @unique
  name          String
  imageUrl      String?
  userPurchases UserPurchase[]
}

model UserPurchase {
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  course     Course   @relation(fields: [courseId], references: [id])
  courseId   Int
  assignedAt DateTime @default(now())

  @@id([userId, courseId])
}

model Video {
  id             Int    @id @default(autoincrement())
  videoUrl       String @unique
  thumbnailImage String @unique
}

model Image {
  id       Int    @id @default(autoincrement())
  name     String @unique
  imageUrl String
}
